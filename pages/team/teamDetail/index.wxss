/* pages/team/teamdetail/index.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.score {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #ff9900;
  font-weight: bold;
}

.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
}

.category-tag {
  background: #e8f4ff;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.description .value {
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
}

.back-btn {
  background: #f0f0f0;
  color: #666;
  align-items: center;
  justify-content: center;
}

.join-btn {
  background: #1890ff;
  color: white;
  align-items: center;
  justify-content: center;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #999;
}