/* pages/team/index.wxss */
.search-container {
  height: 80rpx;
  padding: 20rpx;
}

.search-bar {
  margin: 10rpx;
  position: relative;
}

.icon-search {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
  width: 30rpx;
  height: 30rpx;
}

.search-input {
  border: 1rpx solid #94070A;
  border-radius: 80rpx;
  height: 60rpx;
  padding-left: 80rpx;
}

.search-results {
  height: 250rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.result-header {
  font-size: 30rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.cancel-btn {
  font-size: 30rpx;
  color: #3296e9;
  width: 100%;
  height: 80rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.result-item {
  font-size: 30rpx;
  color: #3296e9;
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  border-bottom: 5rpx solid #BBBBBB;
  display: flex;
  align-items: center;
}

.dish-swiper {
  height: 50vh;
}

.dish {
  display: flex;
}

.dish-details {
  display: flex;
  flex-direction: column;
  width: 550rpx;
}

.dish-image {
  height: 250rpx;
  width: 400rpx;
}

.dish-name {
  font-size: 30rpx;
  font-style: bold;
  color: #94070A;
}

.dish-text {
  font-size: 26rpx;
}

.dish-card {
  height: 100%;
  width: 100%;
  margin: 0 20rpx;
  position: relative;
}

.return-button {
  position: absolute;
  right: 0;
  top: 40px;
  font-size: 26rpx;
  font-style: bold;
  border: 1px solid blue;
  border-right: 0;
  border-radius: 10%;
}

/* 今日食咩 */

.split-line {
  text-align: center;
  color: #94070A;
  font-size: 30rpx;
  margin: 30rpx;
}

.canteen-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}

.canteen-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0;
}

.canteen-img {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.canteen-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.footer {
  text-align: center;
  color: #3296e9;
  font-size: 30rpx;
  margin: 30rpx;
}

.scroll-bg {
  background-color: #EFEFEF;
  width: 100%;
  height: 100vh;
}

.card {
  width: 100%;
  height: 250rpx;
  background-color: white;
  padding-top: 20rpx;
  border-bottom: 20rpx solid #EFEFEF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block {
  width: 92%;
  height: 200rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  font-style: bold;
  flex-direction: row;
}

.score {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 28rpx;
  flex-direction: row;
}

.score-text {
  font-size: 28rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.category {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.category text {
  font-size: 25rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
  border-radius: 5rpx;
}

.description {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}

.description text {
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}