/* pages/task/index.wxss */
.scroll-bg {
  background-color: #EFEFEF;
  width: 100%;
  height: 100vh;
}

.task-card {
  width: 100%;
  height: 140rpx;
  background-color: white;
  padding-top: 20rpx;
  border-bottom: 20rpx solid #EFEFEF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task-block {
  width: 92%;
  height: 120rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.task-status {
  margin-top: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.task-info {
  width: 75%;
  height: 80rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.task-title {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.task-title text {
  font-size: 30rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.task-ddl {
  display: flex;
  justify-content: flex-start;
  margin-top: 20rpx;
  flex-direction: row;
}

.task-ddl text {
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}