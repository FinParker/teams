/* pages/my/myEvaluationList/index.wxss */
.scroll-bg {
  background-color: #EFEFEF;
  width: 100%;
  height: 100vh;
}

.card {
  width: 100%;
  height: 250rpx;
  background-color: white;
  padding-top: 20rpx;
  border-bottom: 20rpx solid #EFEFEF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block {
  width: 92%;
  height: 200rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  font-style: bold;
  flex-direction: row;
}

.score {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 28rpx;
  flex-direction: row;
}

.score-text {
  font-size: 28rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.category {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.category text {
  font-size: 25rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
  border-radius: 5rpx;
}

.description {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}

.description text {
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}