/* pages/my/myEvaluationList/index.wxss */
.scroll-bg {
  background-color: #EFEFEF;
  width: 100%;
  height: 100vh;
}

.card {
  width: 100%;
  height: 200rpx;
  background-color: white;
  padding-top: 20rpx;
  border-bottom: 20rpx solid #EFEFEF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block {
  width: 92%;
  height: 160rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.team {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.info {
  display: flex;
  justify-content: flex-start;
  margin-top:10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.score {
  font-size: 30rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.comment {
  display: flex;
  justify-content: flex-start;
  margin-top: 20rpx;
  flex-direction: row;
}

.comment text {
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}