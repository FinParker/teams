/* pages/my/myStars/index.wxss */
.scroll-bg {
  background-color: #EFEFEF;
  width: 100%;
  height: 80vh;
}

.card {
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

/* 头像及用户信息 */
.first-block {
  width: 92%;
  height: 150rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
}

.person-info {
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.name text {
  font-size: 30rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.commit-time {
  display: flex;
  justify-content: flex-start;
  margin-top: 25rpx;
  flex-direction: row;
}

.commit-time text {
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}

/* 帖子内容 */
.second-block {
  width: 92%;
  margin-top: 20rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #BBBBBB;
}

.tags {
  display: flex;
  flex-direction: row;
}

.tags text {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #3F51B5;
}

.content {
  font-size: 28rpx;
  color: #101010;
  word-break: break-all;
}

/* 点赞和收藏 */
.third-block {
  width: 92%;
  height: 80rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.like-container {
  display: flex;
  align-items: center;
}

.like {
  width: 40rpx;
  height: 40rpx;
}

.like-num {
  height: 52rpx;
  line-height: 52rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #101010;
}

.star-container {
  display: flex;
  align-items: center;
}

.star {
  width: 40rpx;
  height: 40rpx;
}

.star-num {
  height: 52rpx;
  line-height: 52rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #101010;
}

.commit-btn {
  height: 100rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #EFEFEF;
}

.commit-btn button {
  height: 80rpx;
  font-size: 30rpx;
  color: #94070A;
}