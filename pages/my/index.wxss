/* pages/myPage/myPage.wxss */
.bg {
  background-color: #EFEFEF;
  width: 100%;
  height: 100vh;
}

/* 头像及用户信息 */
.first-block {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
}

.person-info {
  width: 75%;
  height: 170rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 30rpx;
  flex-direction: row;
}

.id {
  display: flex;
  justify-self: flex-start;
  margin-top: 10rpx;
  font-size: 25rpx;
  flex-direction: row;
}

.name text {
  font-size: 30rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.bio {
  display: flex;
  justify-self: flex-start;
  margin-top: 10rpx;
  font-size: 25rpx;
  flex-direction: row;
}

/* 菜单选项 */
.menu {
  margin-top: 20rpx;
  background-color: #FFFFFF;
}

.menu-box {
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  border-bottom: 5rpx solid #BBBBBB;
  display: flex;
  align-items: center;
}

.menu-icon {
  margin-left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.menu-text {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #000000;
  font-family: PingFangSC-regular;
  font-weight: bold;
}